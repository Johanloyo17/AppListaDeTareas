$color = {
    primary: #D14334
    light: #FFEAAD
    secundary: #028F76
    secundary-1: #B3E099
    dark: #1C2130
    grey: lighten(#eee,30%)
    }


$p-tareas= .75rem 1.25rem;
////////

*
	margin: 0;
	padding: 0;
	list-style: none;
	text-decoration: none;
	border: none;
	outline: none;
    
body
    background: $color.dark

.m0
    margin: 0 !important
    
.titulo
    font-size: 2.5rem
    

.app
    padding:0 25px 
    width: 100vw
    display grid
    grid-template-columns: repeat(2, 1fr)
    justify-content: space-between
    grid-gap: 35px

nav 
    background: $color.primary !important 
    margin-bottom: 20px
    color: #000 !important
    .nav-wrapper
        padding: 0 15px 
    a
        color: lighten( $color.light , 30%) !important
.text-dark
    color: $color.dark !important

.containerAppTareas
    position relative
    width: 50vw
.cont-contadores
    display: flex
    justify-content: space-between
    margin: 1rem 0
.contadorTareas
    border:  solid 1px $color.light !important
    background: $color.secundary !important
.tareasTerminadas
    border:  solid 1px $color.light !important
    background: $color.secundary !important
        
    // & .tareasTerminadas

.botonApp
    border:  solid 1px $color.light !important
    background: $color.secundary !important
    color: lighten($color.light, 20%)  !important
    font-weight: 600
    &-red
        background: $color.primary !important



//nueva tareaq styles
.nuevaTarea
    position: relative
    margin 0 !important
    
.input-tareas
    width: 100%
    margin: 2rem 0 !important
    position: relative
.saveBoton
    position: absolute
    height 100%
    right 0
    top: -5px
    display: flex;
    align-items: center
    
    button
        border: solid 1px #cdb380 !important;
        color: $color.light

//lista de tareas styles 
.tareaList
    border: none !important
    &-tarea
        display: flex
        background: $color.light 
        border: 2px solid $color.blue !important
        padding: $p-tareas
        color: $color.dark !important
        display: flex
        align-items: center
        font-size: 1.3em 
        .circle
            background: $color.blue_1
        span
            color: $color.dark !important


.buttonsTarea
    margin-left: auto
    button
        margin: 0 5px












//////////////////////////////////

.card
    h4 
        color: #000

.linkform
    color #000

    //list styles

.lista
    color: #000
    &-head , &-datos  
        display: grid
        grid-template-columns: repeat(2,1fr) .5fr 
        grid-template-rows: 1fr
        justify-content: center
        color: #000
        span
            text-align: center
            color: #000
.acciones
    display: flex;
    justify-content: center;
    button 
        font-weight: 800







////////////////////////input styles 

.singIn-cont
    background: $color.grey;
    position: absolute;
    top: 10vh;
    min-width 25rem
    z-index: 5;
    padding: 10px;
    right: 20px;
    line-height: 1.5 !important;
    box-shadow: 3px 3px 40px 8px rgba(72, 72, 72, 0.32);
    .forgot-text
        text-align: right 
        color grey 
        font-size: .8rem
        span:hover
            text-decoration: underline
            color: #000
            cursor: pointer


.inputs-container
    padding: 10px
    .input-field
        margin: 15px 0 40px 0;
.auth-title
    padding: 10px 
    display: flex 
    font-size: 1.6rem;
    letter-spacing: 5px;
    font-weight: 600;
    color: $color.dark

.appInput
    border-bottom:  solid 1px grey !important
    
.appInput:focus
    border-bottom: $color.secundary solid 1px !important
    
